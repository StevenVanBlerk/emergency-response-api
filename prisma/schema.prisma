datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PanicEvent {
  id        String   @id @default(uuid())
  deviceId  String
  severity  Severity
  lat       Float
  lng       Float
  timestamp DateTime @default(now())
  status    Status   @default(OPEN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  ACKNOWLEDGED
  DISPATCHED
  RESOLVED
}
